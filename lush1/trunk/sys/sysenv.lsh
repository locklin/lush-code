;;; --------- Miscellaneous macro-chars ---------

(dmc |'|                                   ;; the QUOTE macro
     (list (quote quote) (read)))

(dmc |~|                                   ;; the NULL macro
     (list 'null (read)))

(dmc |!|                                   ;; the SYS macro
     (list 'sys (read_string)))

(dmc |:|                                   ;; the SCOPE macro
     (when (= (skip-char) ":")
           (error 'load "Names beginning by :: are reserved" ()) )
     (let ((ans (list 'scope (read))))
       (while (= (skip-char "") ":")
	 (read-string 1)
	 (setq ans (nconc1 ans (read))) )
       ans ) )

(dmc |#!|                                  ;; the SCRIPT macro
     (read-string)
     () )

(lock_symbol |'| |~| |!| |:| |#!|)




