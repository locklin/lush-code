;; ldoc renderer for HTML
(defclass ldoc-html ldoc-func
  (_leftside 0)
  (_rightside 72)
  (_parmode t)
  (title-font "<font color=#cc0000>")
  (text-font "<font color=#000000>")
  )

(defmethod ldoc-html render-header (doc)
  (let ((_n :doc:name)
	(_type :doc:type))
    (when _n (printf "%s<h2>%s \n" title-font _n))
    (when _type (printf "[%s]" _type))
    (printf "</h2></font>\n")
    (when :doc:file 
      (printf "File:<font color=#22cc22>%s</font><br>\n" :doc:file))
    (when :doc:author
      (printf "Author:<font color=#2222cc>%s</font><br>\n" :doc:author))
    (when :doc:date
      (printf "Date:<font color=#444444>%s</font><br>\n" :doc:date))
    (when :doc:description
      (printf "Description:<font color=#ee4444>%s</font><br>\n" :doc:description))
    (when :doc:keywords
      (printf "Keywords:<font color=#ee4444>%s</font><br>\n" :doc:keywords))
    (printf "<p>\n")))
  
  
(defmethod ldoc-html render (doc)
  (==> this render-header doc)
  (printf "%s\n" text-font)
  (eval :doc:doc)
  (printf "</font><p>\n"))


(defmethod ldoc-html ldoc-html ()
  (setq ldoc-mode 'html)
  (setq ldoc-if-html  (flambda l (ldoc-evalprintf l t)))
  (setq ldoc-if-latex ldoc-noop)
  (setq ldoc-if-ogre ldoc-noop)
  (setq ldoc-if-text ldoc-noop)
  (setq ldoc-br (flambda () (printf "<br>\n")))
  (setq ldoc-p  (flambda l (ldoc-evalprintf l t) (printf "\n<p>\n")))
  (setq ldoc-h1 (flambda l (ldoc-html-tag "h1" l)))
  (setq ldoc-h2 (flambda l (ldoc-html-tag "h2" l)))
  (setq ldoc-h3 (flambda l (ldoc-html-tag "h3" l)))
  (setq ldoc-u (flambda l (ldoc-html-tag "u" l)))
  (setq ldoc-b (flambda l (ldoc-html-tag "b" l)))
  (setq ldoc-i (flambda l (ldoc-html-tag "i" l)))
  (setq ldoc-tt (flambda l (ldoc-html-tag "tt" l)))
  (setq ldoc-pre (flambda l (ldoc-html-tag "pre" l)))
  (setq ldoc-code (flambda l (ldoc-html-tag "pre" l)))
  (setq ldoc-center (flambda l (ldoc-html-tag "center" l)))
  (setq ldoc-hlink 
    (flambda (h . l)
	     (printf "<a href=\"%s\">" (car (nth (eval h) :doc:hlinks)))
	     (ldoc-evalprintf l _parmode)
	     (printf "</a>\n")))
  (setq ldoc-font 
    (flambda (s c . l)
	     (printf "<font size=%s color=%s>" (eval s) (eval c))
	     (ldoc-evalprintf l _parmode)
	     (printf "</font>\n")))
  (setq ldoc-img (flambda (s)
    (printf "<br><center><img src=\"%s\" border=0></center><br>" (eval s))))
  (setq ldoc-ul (flambda l (ldoc-html-tag "ul" l)))
  (setq ldoc-li (flambda l (ldoc-html-tag "li" l)))
  )

(setq *ldoc-html* (new ldoc-html))

