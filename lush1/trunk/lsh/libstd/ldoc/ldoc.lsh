;; ldoc renderer for LaTeX
(defclass ldoc-latex ldoc-func)


(defmethod ldoc-latex ldoc-latex ()
  (setq ldoc-mode 'latex)
  (setq ldoc-if-html (flambda l ()))
  (setq ldoc-if-latex (flambda l (flatten (all ((x l)) (sprintf (eval x))))))
  (setq ldoc-if-ogre (flambda l ()))
  (setq ldoc-if-text (flambda l ()))
  (setq ldoc-begin (flambda () ()))
  (setq ldoc-end (flambda () ()))
  (setq ldoc-head (flambda l ()))
  (setq ldoc-title (flambda l ()))
  (setq ldoc-keywords (flambda l ()))
  (setq ldoc-body (flambda l ()))
  (setq ldoc-br (flambda () "\\\\"))
  (setq ldoc-p (flambda () "\n\n"))
  (setq ldoc-h1 (flambda l (flatten (list "\n\n{\\Large\\b" (all ((x l) (eval x))) "}\n\n"))))
  (setq ldoc-h2 (flambda l (flatten (list "\n\n{\\large\\b" (all ((x l) (eval x))) "}\n\n"))))
  (setq ldoc-h3 (flambda l (flatten (list "\n\n{\\b" (all ((x l) (eval x))) "}\n\n"))))
  (setq ldoc-u (flambda l (ldoc-tex "u" l)))
  (setq ldoc-b (flambda l (flatten (list "{\\b" (all ((x l) (eval x))) "}"))))
  (setq ldoc-i (flambda l (flatten (list "{\\it" (all ((x l) (eval x))) "}"))))
  (setq ldoc-i (flambda l (flatten (list "{\\tt" (all ((x l) (eval x))) "}"))))
  (setq ldoc-pre (flambda l (flatten 
			(list "\\begin{verbatim}"
			      (all ((x l) (eval x)))
			      "\\end{verbatim}"))))
  (setq ldoc-center (flambda l (flatten 
			   (list "\\begin{center}"
				 (all ((x l) (eval x)))
				 "\\end{center}"))))
  (setq ldoc-hlink 
    (flambda (h . l)
      (flatten (list (all ((x l)) (eval x))
		     (sprintf "(see~\\ref{%s})" (eval h))))))
  (setq ldoc-name 
    (flambda (h . l)
      (flatten (list (sprintf "\\label{%s}" (eval h))))))
  (setq ldoc-font 
    (flambda (s c . l)
      (flatten (list (sprintf "{ (font %s %s)" (eval s) (eval c))
		     (all ((x l)) (eval x))
		     "}"))))
  (setq ldoc-img (flambda (s)
    (sprintf "\n\n\\begin{center}(image %s)\\end{center}\n\n" (eval s))))
  (setq ldoc-ul 
    (flambda l 
      (flatten (list "\\begin{itemize}" 
		     (all ((x l)) (list "\\item " (eval x)))
		     "\\end{itemize}"))))
  )


