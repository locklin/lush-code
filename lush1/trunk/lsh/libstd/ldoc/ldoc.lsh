;; Yann LeCun, May 2002.
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; this includes HTML-like text rendering as well as hyperlinks.

;; (libload "ogre")
(libload "ldoc/ltree")


;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(df ldoc-feval l (each ((x l)) (eval x)))

(de ldoc-parprint _x
    (let ((para (apply concat _x))
	  (idx 1) 
	  (newidx t)
	  (word ()) )
      (while newidx
	(setq newidx (index " " para idx))
	(if (not newidx)
	    (setq word (mid para idx))	  
	  (setq word (mid para idx (- newidx idx)))
	  (setq idx (1+ newidx)) )
	(cond
	 ((< (+ (tab) (len word)) _rightside)
	  (printf " %s" word) )
	 ((<> word "")
	  (printf "\n")
	  (tab _leftside)
	  (printf "%s" word))))))

(de ldoc-evalprintf (l _parmode)
    (each ((x l))
	  (cond 
	   ((consp x) (eval x))
	   ((stringp x) 
	    (if _parmode
		(ldoc-parprint x)
	      (printf x) (printf "\n")))
	   (t (error "illegal ldoc")))))

(df ldoc-fevalprintf l (ldoc-evalprintf l t))
(df ldoc-noop l ())

;; rendering ldoc tag into html
(de ldoc-html-tag (tag l)
    (printf "<%s>" tag)
    (ldoc-evalprintf l t)
    (printf "</%s>\n" tag))

;; rendering ldoc tag into latex
(de ldoc-latex-tag (tag l)
    (flatten (list (concat "\\" tag "{") 
		   (all ((x l)) (eval x))
		   (concat "}"))))


;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; ldoc object: a single page, item, or section in a book

;; a doc code is a normal lisp expression where the following 
;; functions have a special meaning and are interpreted as formatting 
;; or markup tags:
;;  ldoc-hlink: include a hyperlink to another ldoc in the same
;;         book (identified by name).
;;  ldoc-br:   line break
;;  ldoc-font: change font
;;  ldoc-p:    delimitates paragraphs
;;  ldoc-u:    underline
;;  ldoc-b:    bold face
;;  ldoc-i:    italics
;;  ldoc-tt:   typewriter fixed-pitch font
;;  ldoc-center: center text
;;  ldoc-img:  insert image					; image
;;  ldoc-pre:  preformatted text
;;  ldoc-ul:   unstructured list
;;  ldoc-$:    LaTeX math
;;
;;  ldoc-h1:   large title
;;  ldoc-h2:   medium title
;;  ldoc-h3:   small title
;;  ldoc-code: displayed code
;;
;;  ldoc-example:  insert Lush example
;;  ldoc-if-html: insert if rendering to HTML
;;  ldoc-if-latex: insert if rendering to LaTeX
;;  ldoc-if-ogre: insert if rendering to Ogre (screen)
;;  ldoc-if-text: insert if rendering to terminal


(defclass ldoc object
  doc					; * the actual doc code
  name				        ; name/entry for display
  keywords				; keyword list
  title					; (redundant with name)
  hlinks				; alist of (names . ldocs) pairs
  description				; one-line description (optional)
  file					; file where the text resides
  type					; type of object (e.g. "file" "dmd")
  author				; author
  date					; date of last modification
)


;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

;; this is a base class for a bundle of functions that will
;; operate on ldocs (to parse them or to render them).
;; subclasses of this base class include parsers and renderers.
(defclass ldoc-func object
  ldoc-mode 

  ;; metadata
  ldoc-title					; set document title 
  ldoc-anchor				; set anchor name of document
  ldoc-describe				; set short description
  ldoc-keywords				; set keywords
  ldoc-file
  ldoc-author

  ldoc-hlink					; hyperlink to heading

  ;; low-level text formatting tags
  ldoc-br					; line break
  ldoc-font					; font
  ldoc-p					; paragraph
  ldoc-u					; underlined
  ldoc-b					; bold
  ldoc-i					; italic
  ldoc-tt					; typewriter font
  ldoc-center				; center
  ldoc-img					; image
  ldoc-pre					; preformatted
  ldoc-ul					; unstructured list
  ldoc-li					; list item
  ldoc-$					; LaTeX math

  ;; more text formatting
  ldoc-h1					; big title
  ldoc-h2 					; medium title
  ldoc-h3					; small title
  ldoc-code					; displayed code

  ;; special commands
  ldoc-if-html
  ldoc-if-latex
  ldoc-if-ogre
  ldoc-if-text
)


