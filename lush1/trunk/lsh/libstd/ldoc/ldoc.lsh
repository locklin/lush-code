;; ldoc renderer for text display
(defclass ldoc-text ldoc-func
  (_leftside 0)
  (_rightside 72)
  (_parmode t)
 )

(defmethod ldoc-text render-header (doc)
  (let ((_n :doc:name)
	(_type :doc:type))
    (repeat 6 (printf "------------")) (printf "\n")
    (when _n
      (printf "%s" _n)
      (repeat (max 1 (- 40 (len _n))) (printf " "))
      (if (not _type)
	  (repeat 8 (printf " "))
	(repeat (max 1 (- 8 (len _type))) (printf " "))
	(printf "[%s]" _type))
      (when (and :doc:file (<> (right :doc:file 4) ".hlp"))
	(printf "(%s)" :doc:file))
      (printf "\n")
      (repeat 6 (printf ". . . . . . ")) (printf "\n")))
  (when :doc:author (printf "Author(s): %s\n" :doc:author))
  (when :doc:date (printf "Date:%s\n" :doc:date))
  (when :doc:description (printf "Description: %s\n" :doc:description))
  (when :doc:keywords (printf "Keywords: %s\n" :doc:keywords))
  (printf "\n"))
  
(defmethod ldoc-text render (doc)
  (setq _parmode t)
  (==> this render-header doc)
  (eval :doc:doc)
  (printf "\n"))


(defmethod ldoc-text ldoc-text ()
  (setq ldoc-mode 'text)
  (setq ldoc-if-html ldoc-noop)
  (setq ldoc-if-latex ldoc-noop)
  (setq ldoc-if-ogre ldoc-noop)
  (setq ldoc-if-text (flambda l (ldoc-evalprintf l t)))
  (setq ldoc-br (flambda () (printf "\n")))
  (setq ldoc-p  (flambda l (ldoc-evalprintf l t) (printf "\n")))
  (setq ldoc-h1 (flambda l (let ((_leftside (+ _leftside 4)))
			(printf "*** ") (ldoc-evalprintf l t) (printf "\n"))))
  (setq ldoc-h2 (flambda l (let ((_leftside (+ _leftside 3)))
			(printf "** ") (ldoc-evalprintf l t) (printf "\n"))))
  (setq ldoc-h3 (flambda l (let ((_leftside (+ _leftside 2)))
			(printf "* ") (ldoc-evalprintf l t) (printf "\n"))))
  (setq ldoc-u  (flambda l (ldoc-evalprintf l _parmode)))
  (setq ldoc-b (flambda l (ldoc-evalprintf l _parmode)))
  (setq ldoc-i (flambda l (ldoc-evalprintf l _parmode)))
  (setq ldoc-tt (flambda l (ldoc-evalprintf l _parmode)))
  (setq ldoc-pre (flambda l (ldoc-evalprintf l ())))
  (setq ldoc-code (flambda l (ldoc-evalprintf l ())))
  (setq ldoc-center (flambda l (ldoc-evalprintf l ())))
  (setq ldoc-hlink 
    (flambda (h . l) (ldoc-evalprintf l _parmode)))
  (setq ldoc-font 
    (flambda (s c . l)  (ldoc-evalprintf l _parmode)))
  (setq ldoc-img (flambda (s) (printf "\n   [IMAGE %s]\n" (eval s))))
  (setq ldoc-ul (flambda l (ldoc-evalprintf l ())))
  (setq ldoc-li (flambda l 
		    (ldoc-evalprintf '("*") t)
		    (let ((_leftside (+ _leftside 3))) 
			(ldoc-evalprintf l t)
			(printf "\n"))))
  )

(setq *ldoc-text* (new ldoc-text))

