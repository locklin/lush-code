;; ldoc renderer for ogre display
(defclass ldoc-ogre ldoc-func
  mode
  font-name
  font-style
  font-size
  font-color
  ldoc-x				; current painting position
  ldoc-y
  ldoc-xx				; upper-left corner of drawing area
  ldoc-yy
  ldoc-width				; width/height of drawing area
  ldoc-height
)

(de ldoc-ogre-font (nam styl size col) ())


(defmethod ldoc-ogre ldoc-ogre ()
  (setq ldoc-mode 'ogre)
  (setq ldoc-begin (flambda l ()))
  (setq ldoc-end (flambda l ()))
  (setq ldoc-head (flambda l ()))
  (setq ldoc-title (flambda l ()))
  (setq ldoc-keywords (flambda l ()))
  (setq ldoc-body (flambda l ()))
  (setq ldoc-br (lambda () (setq ldoc-x ldoc-xx) (incr ldoc-y ldoc-lineh)))
  (setq ldoc-p (lambda () (setq ldoc-x ldoc-xx) (incr ldoc-y (* 2 ldoc-lineh))))
  (setq ldoc-h1 (flambda l 
	     (let ((fontbkp ldoc-font))
	       (font (setq ldoc-font "Helvetica-Bold-24"))
	       (ldoc-paint-eval l)
	       (font fontbkp))))
  (setq ldoc-h2 (flambda l 
	     (let ((fontbkp ldoc-font))
	       (font (setq ldoc-font "Helvetica-Bold-14"))
	       (ldoc-paint-eval l)
	       (font fontbkp))))
  (setq ldoc-h3 (flambda l 
	     (let ((fontbkp ldoc-font))
	       (font (setq ldoc-font "Helvetica-Bold-11"))
	       (ldoc-paint-eval l)
	       (font fontbkp))))
  (setq ldoc-u (flambda l 
	    (let ((x ldoc-x) (y (+ ldoc-y 3)))
	      (ldoc-paint-eval l)
	      (draw-line x y ldoc-x y))))
  (setq ldoc-b (flambda l 
	     (let ((fontbkp ldoc-font))
	       (font (setq ldoc-font (regex-subst "^.?-" "%0Bold-" ldoc-font)))
	       (ldoc-paint-eval l)
	       (font fontbkp))))
  (setq ldoc-i (flambda l (ldoc-add-tag "i" l)))
  (setq ldoc-tt (flambda l (ldoc-add-tag "tt" l)))
  (setq ldoc-pre (flambda l (ldoc-add-tag "pre" l)))
  (setq ldoc-center (flambda l (ldoc-add-tag "center" l)))
  (setq ldoc-hlink (flambda (h . l)
		(ldoc-add (sprintf "<a href=\"%s\">" (eval h)))
		(ldoc-add-eval l)
		(ldoc-add "</a>")))
  (setq ldoc-name (flambda (h . l)
		 (ldoc-add (sprintf "<a name=\"%s\">" (eval h)))
		 (ldoc-add-eval l)))
  (setq ldoc-font (flambda (c s . l)
               (ldoc-add (sprintf "<font size=%s color=%s>"))
	       (ldoc-add-eval l)
	       (ldoc-add "</font>")))
  (setq ldoc-img (lambda (s)
	      (ldoc-add (sprintf "<br><center><img src=\"%s\" border=0></center><br>" s))))
  (setq ldoc-ul (flambda l 
	     (ldoc-add "<ul>")
	     (all ((x l)) (ldoc-add "<li>") (ldoc-add (eval x)))
	     (ldoc-add "</ul>")))
  )

