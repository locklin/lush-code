;; PLOTPORTLOCK

(defclass PlotPortLock Object
  port )

(defmethod PlotPortLock PlotPortLock(p)
  (when (setq port p)
    (setq :port:locks (1+ :port:locks)) ) )

(defmethod PlotPortLock -destructor()
  (when (and port (numberp :port:locks))
    (when (> :port:locks 0)
      (setq :port:locks (1- :port:locks)) )
    (when :port:dirty
      (==> port execute) ) ) )


