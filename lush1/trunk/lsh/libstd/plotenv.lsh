(defmethod PlotAxisSetup status()
  (==> minboundedit enable)
  (==> maxboundedit enable)
  (==> labeledit enable)
  (==> tickedit enable)
  (==> autotickchk enable)
  (when (==> autoboundchk getdata)
    (==> minboundedit disable)
    (==> maxboundedit disable) )
  (when (==> logchk getdata)
    (==> autotickchk setdata t)
    (==> autotickchk disable) )
  (when (==> autotickchk getdata)
    (==> labeledit disable)
    (==> tickedit disable) ) )

(defmethod PlotAxisSetup load(port)
  (let ((v ()))
    (cond
     ((= axis 'x)
      (setq v (letslot port
                       (list xtitle xlog xgrid xbounds xlabels xticks) )) )
     ((= axis 'y)
      (setq v (letslot port
                       (list ytitle ylog ygrid ybounds ylabels yticks) )) ) )
    (when v
      (let (((ttl log grd bnd lab tik) v))
        (==> this setdata
             (list (or ttl "") log grd 
                   (not (consp bnd)) 
                   (if (consp bnd) (car bnd) 0)
                   (if (consp bnd) (cadr bnd) 0)
                   (not (numberp lab))
                   (if (numberp lab) lab 0)
                   (if (numberp tik) tik 0) ) ) ) ) ) )

(defmethod PlotAxisSetup save(port)
  (let (((ttl log grd abnd minbnd maxbnd alab majlab minlab) 
         (==> this getdata) ))
    (cond
     ((= axis 'x)
      (setq :port:xtitle (if (= ttl "") () ttl))
      (setq :port:xlog log)
      (setq :port:xgrid grd)
      (setq :port:xbounds (if (not abnd) (list minbnd maxbnd)))
      (setq :port:xlabels (if (not alab) majlab))
      (setq :port:xticks  (if (not alab) minlab)) )
     ((= axis 'y)
      (setq :port:ytitle (if (= ttl "") () ttl))
      (setq :port:ylog log)
      (setq :port:ygrid grd)
      (setq :port:ybounds (if (not abnd) (list minbnd maxbnd)))
      (setq :port:ylabels (if (not alab) majlab))
      (setq :port:yticks  (if (not alab) minlab)) ) ) ) )


;; CONTROLLER

(defclass PlotPortController AutoWindowObject
  port
  basewindow
  themenu
  thestack
  thestuff 
  applybtn )

(defmethod PlotPortController PlotPortController(&optional p)
  (when (not p)
    (setq p plot-port) )
  (when (consp p)
    (setq p (cadr p)) )
  (cond
   ((is-of-class p PlotPort)
    (setq port p) )
   ((is-of-class p PlotWindow)
    (setq basewindow p)
    (setq port :p:plot) )
   (t
    (error 'new "illegal argument" p) ) )
  (setq thestack (new stack))
  (setq themenu (new choicemenu () (lambda(c) (==> thisform select (==> c getdata)))))
  (setq applybtn (new stdbutton "Apply" (lambda(c) (==> thisform save))))
  (setq :applybtn:default-ring t)
  (==> this add "Title" (new PlotDataSetup))
  (==> this add "X axis" (new PlotAxisSetup 'x ))
  (==> this add "Y axis" (new PlotAxisSetup 'y ))
  (==> this load)
  (==> this autowindowobject 0 0 400 300 
       (if basewindow
           (concat "Setup " :basewindow:name)
         "Setup Plot" )
       (new column
            (new row
                 (new string "Configure ") 
                 themenu )
            (new darkspace 3 3)
            thestack
            (new darkspace 3 3)
            (new row
                 (new emptyspace 80 1)
                 applybtn
                 (new stdbutton "Close" (lambda(c) (==> thisform delete))) 
                 (new emptyspace 80 1) ) ) )
  (setq :port:controlwindow this) )

(defmethod PlotPortController keypress(c x y)
  (if (= c "\r") (==> applybtn trigger) 'ignored) )

(defmethod PlotPortController select(&optional key)
  (when (not key)
    (setq key (or (==> themenu getdata) (caar thestuff))) )
  (let ((obj (cdr (assoc key thestuff))))
    (when obj
      (==> themenu setdata key)
      (==> obj front) ) ) )

(defmethod PlotPortController load()
  (when port
    (each (((k . obj) thestuff)) (==> obj load port)) ) )

(defmethod PlotPortController save()
  (when port
    (each (((k . obj) thestuff)) (==> obj save port))
    (==> port execute) ) )

(defmethod PlotPortController add(key obj)
  (setq thestuff (nconc1 thestuff (cons key obj)))
  (==> thestack insert obj)
  (let (((x y w h) :thestack:rect))
    (==> obj back x y w h) )
  (let ((key (==> themenu getdata)))
    (==> themenu setitems (mapcar car thestuff))
    (==> this select key) ) )

(defmethod PlotPortController del(key)
  (let ((ns ()))
    (each ((pair thestuff))
      (if (<> key (car pair))
          (setq ns (cons pair ns))
        (==> thestack remove (cdr pair)) ) )
    (setq thestuff (reverse ns))
    (let ((key (==> themenu getdata)))
      (==> thesmenu setitems (mapcar car thestuff))
      (==> this select key) ) ) )




