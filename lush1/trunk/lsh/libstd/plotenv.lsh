;; Emulate "oldplotenv" unless it has already been loaded.
(when (not (is-of-class in-plot-port |DM|))
  
  ;; Copied from oldplotenv.
  (de nice-brect()
    (list 0 (ysize) (xsize) 0) )
  (de rect-2-ppbrect((x y w h))
    (list x (+ y h) (+ x w) y) )
  (de nice-scale(mini maxi &optional (deltamin 0))
    (let* ((d (abs (- maxi mini)))
	   (logd (int (/ (log (/ d 3)) (log 10))))
	   (step1 (** 10 logd))
	   (ratio (/ deltamin step1))
	   (step  (* step1 (max 1 (- (int (- ratio))))))
	   (start (* step (int (/ (+ mini step) step)))))
      (range start maxi step) ) )
  (de graph-scale(min max)
    (let ((mult (** 10 (int (/ (log (/ (- max min) 2)) (log 10))))))
      (setq min (* mult (int (/ min mult))))
      (setq max (* mult (int (+ 0.99 (/ max mult)))))
      (list min max mult) ) )
  
  ;; Functions no longer available.
  (df in-plot-port args
    (error "This function is only available with \"oldplotenv.lsh\".") )
  (defparameter plt-rbx in-plot-port)
  (defparameter plt-rby in-plot-port)

  ;; Replacement for new-plot-port.
  (de new-plot-port(&optional brect prect object)
    (let* ((pw ()) (pp ()) (pc ()))
      (if (not window)
          (progn 
            (setq pw (new PlotWindow))
            (setq pp :pw:plot) )
        (progn
          (setq pp (new PlotPort))
          (setq :pp:window window)
          (setq :pp:attrwindow window)
          (setq :pp:plotrect
                (let (((xmin ymin xmax ymax)
                       (or brect (list 0 0 (xsize) (ysize))) ))
                  (list (min xmin xmax)
                        (min ymin ymax)
                        (abs (- xmax xmin))
                        (abs (- ymax ymin)) ) ) ) ) )
      (when prect
	(let (((xmin ymin xmax ymax) prect))
	  (when (and xmin xmax)
	    (setq :pp:xbounds (list xmin xmax)) )
	  (when (and ymin ymax)
	    (setq :pp:ybounds (list ymin ymax)) ) ) )
      (setq pc (new PlotCompat))
      (when (functionp object)
	(==> pc command `(setq current-object ,object)) )
      (==> pp add pc)
      (list pc pp object) ) )
  
  ;; Replacement for copy-plot-port.
  (de copy-plot-port(port &optional object)
    (setq object (or object (nth 2 port)))
    (let ((pp (cadr port))
	  (pc (new PlotCompat)))
      (when (functionp object)
	(==> pc command `(setq current-object ,object)) )
      (==> pp add pc)
      (list pc pp object) ) )
  
  ;; approximate replacement for draw-axes
  (de draw-axes(brect xlabel ylabel name &optional x2l y2l)
    (let (((pc pp . aux) plot-port))
      (setq :pp:plotrect
            (let (((xmin ymin xmax ymax)
                   (or brect (list 0 0 (xsize) (ysize))) ))
              (list (min xmin xmax)
                    (min ymin ymax)
                    (abs (- xmax xmin))
                    (abs (- ymax ymin)) ) ) )
      (when xlabel 
        (setq :pp:xlabels xlabel) 
        (setq :pp:xticks xlabel) )
      (when ylabel 
        (setq :pp:ylabels ylabel) 
        (setq :pp:yticks ylabel) )
      (when name
        (setq :pp:title (when (<> name "") name)) )
      (when (functionp x2l)
        (setq :pp:xlabel2str x2l) )
      (when (functionp y2l)
        (setq :pp:xlabel2str y2l) )
      (==> pp execute) ) )
  
  ;; replacement for setup-axes.
  (de setup-axes(xmin ymin xmax ymax &optional xstep ystep (name "") object x2l y2l)
    (let* ((brect (list 0 0 (xsize) (ysize)))
           (rrect (list xmin ymin xmax ymax)) )
      (setq plot-port (new-plot-port brect rrect (or object open-square)))
      (==> (cadr plot-port) execute)
      plot-port) )
  
  ;; simple drawing functions.
  (de plt-clear()
    (let (((pc pp . aux) plot-port))
      (let ((window (or window :pp:window)))
	(==> pc command `(plt-clear)) ) ) )
  (de plt-move(x y)
    (let (((pc pp . aux) plot-port))
      (let ((window (or window :pp:window)))
	(==> pc command `(plt-move ,x ,y)) ) ) )
  (de plt-draw(x y)
    (let (((pc pp . aux) plot-port))
      (let ((window (or window :pp:window)))
	(==> pc command `(plt-draw ,x ,y)) )
      (==> pp execute) ) )
  (de plt-plot(x y)
    (let (((pc pp . aux) plot-port))
      (let ((window (or window :pp:window)))
	(==> pc command `(plt-plot ,x ,y)) )
      (==> pp execute) ) )
  (de plt-sd(x y v)
    (let (((pc pp . aux) plot-port))
      (let ((window (or window :pp:window)))
	(==> pc command `(plt-sd ,x ,y ,v)) )
      (==> pp execute) ) )

  ;; high level drawing functions.
  ;; (not very good yet)
  (de plot-lists (lx ly)
    (plt-clear)
    (let ((lock (new PlotPortLock (cadr plot-port))))
      (each ((x lx)(y ly))
        (plt-draw x y) )
      (each ((x lx)(y ly))
        (plt-plot x y) ) ) )
  (de plot-lists-sd (lx ly lv)
    (plt-clear)
    (let ((lock (new PlotPortLock (cadr plot-port))))
      (each ((x lx)(y ly))
        (plt-draw x y) )
      (each ((x lx)(y ly)(v lv))
        (plt-sd x y v) 
        (plt-plot x y) ) ) )
  (de graph-xy(lx ly &optional name)
    (let* ((pp (new PlotWindow))
	   (pc (new PlotCompat))
	   (plot-port (list pc :pp:plot ())) 
	   (window :pp:window) )
      (when name (setq :pp:plot:title name))
      (==> :pp:plot add pc)
      (plot-lists lx ly)
      pp ) )
  (de graph-xyv(lx ly lv &optional name)
    (let* ((pp (new PlotWindow))
	   (pc (new PlotCompat))
	   (plot-port (list pc :pp:plot ())) 
	   (window :pp:window) )
      (when name (setq :pp:plot:title name))
      (==> :pp:plot add pc)
      (plot-lists-sd lx ly lv)
      pp ) )
  
  () )
