@SET_MAKE@
SHELL = @SHELL@
VPATH = @srcdir@
srcdir = @srcdir@
top_srcdir = @top_srcdir@
top_builddir = .

bbindir = ./bin

MV = @MV@
LN_S = @LN_S@
INSTALL = @INSTALL@

#;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

SUBDIRS=src

world: all
	@test -d ${bbindir} || mkdir ${bbindir}
	@test -r ${bbindir}/lush~3 && \
	  ${MV} ${bbindir}/lush~3 ${bbindir}/lush~4 || true
	@test -r ${bbindir}/lush~2 && \
	  ${MV} ${bbindir}/lush~2 ${bbindir}/lush~3 || true
	@test -r ${bbindir}/lush~1 && \
	  ${MV} ${bbindir}/lush~1 ${bbindir}/lush~2 || true
	@test -r ${bbindir}/lush && \
          ${MV} ${bbindir}/lush ${bbindir}/lush~1 || true
	${INSTALL} -m 755 src/lush ${bbindir}
	@echo "Congratulations: the compilation was successful!"

all depend clean: FORCE
	for d in ${SUBDIRS} ; \
	  do ( cd $$d && ${MAKE} $@ ) || exit ; done

install:
	@echo "-------------------------------------------------------"
	@echo "Lush is designed to run from the compilation directory."
	@echo "Most source files are required for Lush proper operation."
	@echo "Just copy this directory anywhere you please."
	@echo "-------------------------------------------------------"

distclean: FORCE
	for d in ${SUBDIRS}; do ( cd $$d && ${MAKE} $@ ); done
	-${RM} 2>/dev/null include/config.h include/autoconf.h 
	-${RM} 2>/dev/null -rf autom4te.cache
	-${RM} 2>/dev/null -rf bin/lush bin/lush~[0-9]
	-${RM} 2>/dev/null Makefile config.log config.status

FORCE:

.PHONY: FORCE
