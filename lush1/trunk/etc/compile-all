#!/usr/bin/lush

(libload "libc/shell")

(de findlsh (d)
  (pushd d)
  (prog1 
      (all ((f (sh-find "." "*.lsh"))) (mid f 3))
    (popd)))


(let ((l (append 
	  (findlsh (concat-fname lushdir "lsh"))
	  (findlsh (concat-fname lushdir "packages"))
	  ;; (findlsh (concat-fname lushdir "local")))
	  )))
  (each ((f l))
    (when (not (index "dh-compile" f))
      (libload f))))

